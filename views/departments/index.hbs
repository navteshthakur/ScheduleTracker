<h1>
  {{title}}
</h1>
{{!-- Add links to CRUD operations --}}
{{#if user}}
  <a href="/departments/add">Add a new Department</a>
{{/if}}

{{!-- To Show data --}}
<table class="table table-striped table-hover">
  <thead>
    <th>Department</th>
    <th>Task Code</th>
  </thead>
  <tbody>
  {{#each dataset}}
    <tr>
      <td>{{this.department}}</td>
      <td>{{this.taskCode}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>